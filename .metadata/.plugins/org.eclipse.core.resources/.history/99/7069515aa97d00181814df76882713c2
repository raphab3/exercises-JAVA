package entities;

public class Student {
	public String nome;
	public double n1;
	public double n2;
	public double n3;
	
	public double notaFinal() {
		return n1 + n2 + n3;
	}
	public String aprovacao() {
		if (notaFinal() > 60){
			return "Pass";
			
		}else {
			return "Failed" + "Missign " + String.format("%.2f", resto()) + "Points" ;
		}
	}
	public double resto() {
		return 60 - notaFinal();
	}
	@Override
	public String toString() {
		return nome + String.format("%.2f", notaFinal())  + ", aprovacao()=" + aprovacao() + ", resto()="
				+ resto() + "]";
	}
		
	
	
	
	
}
