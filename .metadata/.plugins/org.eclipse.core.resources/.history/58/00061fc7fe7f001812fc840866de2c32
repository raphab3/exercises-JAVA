package exercicioList;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import entities.Employee;

public class Program {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		
		Scanner sc = new Scanner(System.in);
		
		List<Employee> list =  new ArrayList<>();
		
		
		System.out.println("How many employees will be registered? ");
		int n = sc.nextInt();
		sc.nextLine();
		int selectId = 0;
		List Employee listId;
		for(int i=0; i<n; i++) {
			System.out.println("ID: ");
			int id = sc.nextInt();
			sc.nextLine();
			
			System.out.println("Name: ");
			String name = sc.nextLine();
			
			System.out.println("Salary: ");
			double salary = sc.nextDouble();
			
			System.out.println("Enter the employee id that will have salary increase: ");
			selectId = sc.nextInt();
			sc.nextLine();
			
			List<Employee> listId = list.stream().filter(x -> x == list.get(id)).collect(Collectors.toList());
//			List<Employee> result = list.stream().filter(x -> x == selectId).collect(Collectors.toList());
			
			list.add(new Employee(id, name, salary));
			
		}
		
		System.out.println("SelectID: " + listId);
		double count = 1;
		for (Employee x : list) {
			System.out.printf("Employee #%.0f:", count);
			System.out.println();
			System.out.println(x);
			count+= 1;
		}
		sc.close();
	}

}
