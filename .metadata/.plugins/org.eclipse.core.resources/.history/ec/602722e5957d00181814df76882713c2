package entities;

public class Employee {
	public String nome;
	public double grossSalary;
	public double tax;
	
	public double netSalary() {
		return this.grossSalary * this.tax / 100;
	}
	public void increaseSalary(double percentage) {
		this.grossSalary += grossSalary * (percentage / 100);  
	}
}
